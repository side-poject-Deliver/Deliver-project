<%= flash[:notice] %>
<h1>商店列表</h1>

<%= link_to "新增商店", new_shop_path %>

<table>
    <tr>
        <td>店名</td>
        <td>地址</td>
        <td>電話</td>
        <td>統編</td>
        <td>編輯商店</td>
        <td>刪除商店</td>
    </tr>

    <% @shops.each do |shop| %>
        <tr>
            <td>
                <%= link_to shop.title, shop_path(shop.id) %>
            </td>
            <td>
                <%= shop.address %>
            </td>
            <td>
                <%= shop.phone %>
            </td>
            <td>
                <%= shop.tax_number %>
            </td>
            <td>
                <%= link_to '編輯' , edit_shop_path(shop.id) %>
            </td>
            <td>
              <%= link_to '刪除' , shop_path(shop.id), method: 'delete' , data: {confirm: '確定要刪除嗎？'}%>
            </td>
        </tr>
    <% end %>
</table>