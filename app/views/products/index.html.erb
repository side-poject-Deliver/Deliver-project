<h1>商品總覽</h1>

<%= link_to "新增商品" , new_product_path %>

<table>
  <% @products.each do |product|%>
    <tr>
      <td>商品名稱</td>
      <td>商品價錢</td>
      <td>商品數量</td>
      <td></td>

    </tr>
    <tr>
      <td><%= link_to product.product_name, product_path(product) %></td>
      <td><%= product.price%></td>
      <td><%= product.quantity%></td>
      <td>
        <%= link_to "編輯" , edit_product_path(product) %>
        <%= link_to "刪除" , product_path(product) ,method:"DELETE" ,data:{confirm: "確認刪除？"}%>
      </td>
    </tr>


  <% end %>
</table>
